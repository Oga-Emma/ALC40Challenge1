<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfileActivity">

    <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_marginEnd="8dp"
                android:layout_margin="2dp" android:scaleType="centerCrop" app:srcCompat="@drawable/profile_pic"/>
    </FrameLayout>
    <TextView
            android:text="ANI EMMANUEL LINUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:fontFamily="@font/roboto"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/ba"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:textStyle="bold"/>
    <TextView
            android:text="Track: Android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/ba"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintVertical_chainStyle="packed" app:layout_constraintVertical_bias="0.120000005"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"/>
    <TextView
            android:text="Country: Nigeria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/textView3" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView3"/>
    <TextView
            android:text="Email: sevenapps2018@gmail.com"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/textView4" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <TextView
            android:text="Phone: 2347012446202"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/textView5" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/textView5" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"/>
    <TextView
            android:text="Slack Username: Emmanuel Ani Linus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:fontFamily="@font/roboto"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.44"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/ba"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>